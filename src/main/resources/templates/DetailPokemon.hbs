                </div>
                <div class="col-md-4">
                    <label class="statiLabel">Attaque</label>
                    <h3 class="statilevel">{{resultFrDetail.pokemonsDetails.stats.1.base_stat}}</h3>
                </div>
                <div class="col-md-4">
                    <label class="statiLabel">Défense</label>
                    <h3 class="statilevel">{{resultFrDetail.pokemonsDetails.stats.2.base_stat}}</h3>
                </div>
                <div class="col-md-4">
                    <label class="statiLabel">Vitesse</label>
                    <h3 class="statilevel">{{resultFrDetail.pokemonsDetails.stats.3.base_stat}}</h3>
                </div>
                <div class="col-md-4">
                    <label class="statiLabel">Attaque Spéciale</label>
                    <h3 class="statilevel">{{resultFrDetail.pokemonsDetails.stats.4.base_stat}}</h3>
                </div>
                <div class="col-md-4">
                    <label class="statiLabel">Défense Spéciale</label>
                    <h3 class="statilevel">{{resultFrDetail.pokemonsDetails.stats.5.base_stat}}</h3>
                </div>

            </div>
        </div>
</section>
{{/if}}
